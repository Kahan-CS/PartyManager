@model PartyViewModel

@{
    ViewData["Title"] = "Edit Party";
}

<form asp-controller="PartyManager" asp-action="Edit" method="post" enctype="application/x-www-form-urlencoded">
    <div class="text-danger" asp-validation-summary="All"></div>

    <!-- Hidden field for primary key -->
    <input type="hidden" asp-for="Party.PartyId" />

    <div class="form-group">
        <label asp-for="Party.Description">Description</label>
        <input type="text" asp-for="Party.Description" class="form-control" />
        <span class="text-danger" asp-validation-for="Party.Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="Party.EventDate">Event Date</label>
        <input type="date" asp-for="Party.EventDate" class="form-control" />
        <span class="text-danger" asp-validation-for="Party.EventDate"></span>
    </div>

    <div class="form-group">
        <label asp-for="Party.Location">Location</label>
        <input type="text" asp-for="Party.Location" class="form-control" />
        <span class="text-danger" asp-validation-for="Party.Location"></span>
    </div>
    <div style="padding-top: 10px;">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="PartyManager" asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
